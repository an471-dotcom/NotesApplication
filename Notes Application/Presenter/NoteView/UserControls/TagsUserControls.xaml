        <myControl:MyTokenizingTextBox
            x:Name="TagsCollection"
            Width="310"
            x:Uid="Tags"
            ItemsSource="{x:Bind _viewModel.NoteTags,Mode=OneWay}"
            TextChanged="TagsCollection_TextChanged"
            TokenItemAdding="TagsCollection_TokenItemAdding"
            TokenItemAdded="TagsCollection_TokenItemAdded"
            TokenItemRemoving="TagsCollection_TokenItemRemoving"
            TokenItemClick="TagsCollection_TokenItemClick"
            BorderThickness="0"
            SelectionMode="None"
            Background="Transparent"
            TokenSpacing="10"
            Padding="5"
            PlaceholderText="Add Tags"
            SuggestedItemsSource="{x:Bind _viewModel.TagsSuggestion,Mode=OneWay}">
            <myControl:MyTokenizingTextBox.TokenItemTemplate>
                <DataTemplate
                    x:DataType="vobj:TagVobj">
                    <StackPanel Orientation="Horizontal" >
                        <Ellipse 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Fill="{x:Bind TagColor,Mode=OneWay}"
                                Width="10"
                                Height="10"
                                Margin="0 0 10 0"/>
                        <TextBlock 
                            Margin="0 0 0 5"
                            Text="{x:Bind Name,Mode=OneWay}" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                    </StackPanel>
                   
                </DataTemplate>
            </myControl:MyTokenizingTextBox.TokenItemTemplate>
            <myControl:MyTokenizingTextBox.SuggestedItemTemplate>
                <DataTemplate
                    x:DataType="model:Tag">
                    <StackPanel Orientation="Horizontal" >
                        <Ellipse 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Fill="{x:Bind TagColor,Mode=OneWay}"
                                Width="10"
                                Height="10"
                                Margin="0 0 10 0"/>
                        <TextBlock 
                            Margin="0 0 0 5"
                            Text="{x:Bind Name,Mode=OneWay}" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                    </StackPanel>

                </DataTemplate>
            </myControl:MyTokenizingTextBox.SuggestedItemTemplate>
        </myControl:MyTokenizingTextBox>
    </ScrollViewer>
        

   
</UserControl>

    xmlns:vobj="using:Notes_Application.Presenter.ViewModel.Models"
    xmlns:model="using:Notes_Library.Models"
    xmlns:converter="using:Notes_Application.Converters"
    Loaded="UserControl_Loaded"
    xmlns:myControl="using:Notes_Application.Presenter.NoteView.TokenStyle"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

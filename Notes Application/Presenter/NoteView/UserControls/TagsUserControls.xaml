        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Presenter/NoteView/NoteViewStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converter:StringLengthConverter x:Key="TitleLengthConverter" length="20" />

            
        </ResourceDictionary>
    </UserControl.Resources>


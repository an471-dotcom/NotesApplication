<Page
    x:Class="Notes_Application.Presenter.NoteView.SecondaryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Notes_Application.Presenter.NoteView"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:userControl="using:Notes_Application.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <userControl:NoteDisplayUserControl Note="{x:Bind Note,Mode=OneWay}" ShowPopOutButton="False"/>
    </Grid>
</Page>
